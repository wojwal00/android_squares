<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.company.davidgame.MenuActivity">

   <Button
       android:text="Wyczyść planszę"
       android:id="@+id/menuButton1"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20sp"
       android:padding="20sp"
       android:textSize="20sp"
       android:onClick="startClearBoardGame"
       />

    <Button
        android:text="Zbieraj punkty"
        android:id="@+id/menuButton2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:padding="20sp"
        android:textSize="20sp"
        android:layout_below="@id/menuButton1"
        android:onClick="startCollectPointsGame"
        />
    <Button

        android:id="@+id/menuButton3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:padding="20sp"
        android:textSize="20sp"
        android:layout_below="@id/menuButton2"
        />
</RelativeLayout>
